<!-- artist.vtl -->
<div id="artist-page">
  <h1 id="artist-name-banner">$artist.getName()</h1>
  <div id="artist-albums">
    #if($albums)
      <h3>List of Albums by $artist.getName(), Click on One to View A Review</h3>
      <br>
        #foreach ($album in $albums)
          #if ($artist.getId() == $album.getArtistId())
            <h3><a href="/album/$album.getId()">$album.getName()</a></h3>
          #end
        #end
    #end
  </div>
</div>
<!-- artist.vtl -->
